<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:orientation="vertical">
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout2" android:layout_width="match_parent" android:weightSum="9">
        <EditText android:id="@+id/addressField" android:text="EditText" android:layout_height="wrap_content" android:layout_width="192px" android:layout_weight="3"></EditText>
        <Spinner android:layout_height="wrap_content" android:id="@+id/recentsSpinner" android:layout_width="wrap_content" android:layout_weight="2.0"></Spinner>
        <Button android:id="@+id/goButton" android:layout_height="wrap_content" android:text="Go" android:layout_width="128px" android:onClick="goClicked" android:layout_weight="4.0"></Button>
    </LinearLayout>
    <RelativeLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/relativeLayout1">
    </RelativeLayout>
    <ScrollView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/scrollView1">
        <LinearLayout android:id="@+id/linearLayout1" android:layout_height="match_parent" android:layout_width="match_parent">
            <TextView android:layout_height="wrap_content" android:id="@+id/pingView" android:text="" android:layout_width="match_parent" android:textSize="11sp"></TextView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:layout_width="128px">
    </LinearLayout>
</LinearLayout>
