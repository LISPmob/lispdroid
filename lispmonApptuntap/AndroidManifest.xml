            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".logActivity"></activity>
        <activity android:name="mapCacheActivity"></activity>
        <activity android:name="confActivity"></activity>
        <activity android:name="pingActivity"></activity>
                
        <activity android:name="dataCacheActivity"></activity>
        <activity android:name="clearCacheActivity"></activity>
